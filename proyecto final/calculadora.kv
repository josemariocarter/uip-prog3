
<Calculadora>:
    id: calculos
    pantalla: input

    BoxLayout:

        orientation: 'vertical'
        padding: 20
        spacing: 15


        TextInput:
            id: input
            size_hint: 1, None
            font_size: 70


        GridLayout:
            rows: 4
            cols: 4

            Button:
                background_color: [1, 1, 5, 1]
                color: [1, 1, 1, 1]
                font_size: 30
                text: '7'
                on_press: input.text += self.text 

            Button:
                font_size: 30
                text: '8'
                on_press: input.text += self.text

            Button:

                font_size: 30
                text: '9'
                on_press: input.text += self.text                
        
            BubbleButton:

                font_size: 50
                text: '+'
                on_press: input.text += self.text

            Button:
                font_size: 30
                text: '4'
                on_press: input.text += self.text

            Button:
                font_size: 30
                text: '5'
                on_press: input.text += self.text

            Button:
                font_size: 30
                text: '6'
                on_press: input.text += self.text

            BubbleButton:
                font_size: 50
                text: '-'
                on_press: input.text += self.text

            Button:
                font_size: 30
                text: '1'
                on_press: input.text += self.text

            Button:
                font_size: 30
                text: '2'
                on_press: input.text += self.text

            Button:
                font_size: 30
                text: '3'
                on_press: input.text += self.text

            BubbleButton:
                font_size: 50
                text: '*'
                on_press: input.text += self.text

            BubbleButton:
                font_size: 50
                text: 'CC'
                on_press: input.text = ""

            Button:
                font_size: 30
                text: '0'
                on_press: input.text += self.text

            BubbleButton:
                font_size: 50
                text: '/'
                on_press: input.text += self.text

            BubbleButton:
                font_size: 50
                text: '='
                on_press: calculos.resultado(input.text)
